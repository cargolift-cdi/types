{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src"],
  "exclude": ["src/nest/**", "test-d/**"]
}
